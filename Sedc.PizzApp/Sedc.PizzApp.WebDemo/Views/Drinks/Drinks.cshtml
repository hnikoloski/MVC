
@{
    ViewData["Title"] = "Drinks";
}

<h2>Drinks</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (Pizza pizza in Model)
    {
        <tr>
            <td>@pizza.Id</td>
            <td>@pizza.Name</td>
            <td>
                <a asp-controller="Pizza"
                   asp-action="Details"
                   asp-route-id="@pizza.Id"
                   class="btn btn-info newBtnStyle">Details</a>
                <a asp-controller="Pizza"
                   asp-action="Edit"
                   asp-route-id="@pizza.Id" class="btn btn-warning newBtnStyle">Edit</a>
                <a asp-controller="Pizza"
                   asp-action="Delete"
                   asp-route-id="@pizza.Id" class="btn btn-danger newBtnStyle">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>